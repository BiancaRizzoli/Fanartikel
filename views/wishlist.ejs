<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Wunschliste</title>
  <link rel="shortcut icon" type="image/x-icon" href="/images/Icon.png">
  <!-- CSS -->
  <link href="/stylesheets/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
  <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" media="all" />
  <link href="/stylesheets/animate.min.css" rel="stylesheet">
  <link href='//fonts.googleapis.com/css?family=Cabin:400,500,600,700' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Lato:400,100,300,700,900' rel='stylesheet' type='text/css'>
  <!-- JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="/javascripts/wow.min.js"></script>
  <script type="text/javascript" src="/javascripts/bootstrap.js"></script>
  <script src="/javascripts/filter.js"></script>
  <script src="/javascripts/wish.js"></script>
  <script src="/javascripts/checkout.js"></script>
</head>

<body>
  <%- include('header'); -%>

  <!--banner-->
  <div class="banner-top">
    <div class="container">
      <h2 class="animated wow fadeInLeft" data-wow-delay=".5s">Wunschliste</h2>
      <div class="clearfix"> </div>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #2f2f2f;">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/wishlist">Wunschliste</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              Fandoms
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% for(var i=0; i < fandom.length; i++) { %>
              <p><button class="fandombtn" onclick="fandom(<%= fandom[i].FandomID %>)" ><img src="/images/<%= fandom[i].Bild %>" style="width:120px;" class=mydropdownimages></button></p>
              <% } %> 
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="product">
    <div class="container">

      <div class="productlist animated wow fadeInRight" data-wow-delay=".5s" style="width:-webkit-fill-available">
        <% if(rows.length === 0){ %>
          <img src="/images/276565.png" alt="" class="responsive">
        <% } %>
        <% if(rows.length > 0){ %>
        <% for(var i=0; i < rows.length; i++) { %>
        <div class="col item-grid simpleCart_shelfItem" style="width: 200px;float: left;margin: 10px;padding:0px" id="<%= rows[i].ArtID %>">
          <div class="grid-pro" style="width:200px; margin: auto">
            <div class=" grid-product ">
              
              <figure><a>
                  <% if(rows[i].BildShownSecond !== null){ %>
                  <div class="grid-img">
                    <img src="/images/<%= rows[i].BildShownSecond %>" class="img-responsive" alt="">
                  </div>
                  <% } %>
                  <div class="grid-img">
                    <img src="/images/<%= rows[i].BildShownFirst %>" class="img-responsive" alt="">
                  </div></a>
              </figure>
            </div>
            <div class="women">
              <div class="bezeichnung">
                <h6>
                  <%= rows[i].Bezeichnung %>
                </h6>
              </div>
              <p><em class="item_price">
                  <%= rows[i].Preis.toFixed(2) %>
                  <%= rows[i].Waehrung %></em></p>
              <p><a onclick="addToCheckout(<%= rows[i].ArtID %>)" data-text="Add To Cart" class="but-hover1 item_add">Add
                  to Cart</a></p>
              <button onclick="removeWish(<%= rows[i].ArtID %>)" class="btn-danger">LÃ¶schen</button>
            </div>
          </div>
        </div>
        <% } %>
        <% } %>
        <div class="clearfix"></div>
      </div>
      <div class="clearfix"></div>
    </div>


    <%- include('footer'); -%>
</body>

</html>